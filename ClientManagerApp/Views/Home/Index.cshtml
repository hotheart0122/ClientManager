    ViewBag.Title = "Home Page";
}

<div class="jumbotron container">
    <h1>Virtual Legal Assistant</h1>
    
    <p class="col-md-10">
        VLA is a web app helping you manage your clients and cass.
        You can add, edit, delete, search your clients and cases.
    </p>
    <img src="~/Content/images/woman-304811_640.png" class="img-responsive col-md-2">
